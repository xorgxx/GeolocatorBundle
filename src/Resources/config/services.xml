<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        https://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- Configurer le ProviderManager avec les providers taggés -->
        <service id="GeolocatorBundle\Service\ProviderManager">
            <argument type="tagged_iterator" tag="geolocator.provider" />
            <argument type="service" id="logger" />
            <argument>3</argument> <!-- maxRetries par défaut -->
        </service>
    </services>
</container>
